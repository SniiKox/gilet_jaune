<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        <link rel="stylesheet" href=" {{asset ('css/app.css') }} ">
        <link rel="shortcut icon" type="image/png" href="{{asset ('img/favicon-16x16.png') }}"/>


        {% block stylesheets %}{% endblock %}
    </head>

    
    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="/"><img width="80" height=auto src="{{asset ('img/gilet.png') }}"</a>
            <button class="navbar-toggler" aria-expanded="false" aria-controls="navbarColor01" aria-label="Toggle navigation" type="button" data-target="#navbarColor01" data-toggle="collapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path ('number') }}">Aller courir avec Nico </a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path ('last_questions') }}">Questions récentes </a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path ('add_question') }}">Ajouter une question</a>
                    </li><li class="nav-item">
                    <a class="nav-link" href="{{ path ('last_comments') }}">Voir tous les commentaires</a>
                    </li>
                
                </ul>
   
            </div>
        </nav>
        <div class="container">
        {% for label, messages in app.flashes(['success', 'warning']) %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
        {% block body %}  {% endblock %}
        {% block footer %} {% endblock %}
        </div>
        

        <footer class="container">
        <ul>
            <li><a href="{{ path ('cgu') }}" >CGU </a></li>
            <li><a href="{{ path ('legal_mentions') }}" >Mentions légales </a></li>
        </ul>
        
        </footer>
        {% block javascripts %}{% endblock %}
    </body>
</html>
